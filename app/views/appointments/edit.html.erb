<h1>Editing Appointment</h1>

<%= form_for :appointment, url: customer_appointment_path(params["customer_id"], params["id"]), method: :patch do |f| %>

  <div class="form-group">
    <%= f.label :start, "Time and Date", :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= time_select :appointment, :start_time, {:class => "form-control" } %>
    </div>
    <div class="col-lg-4">
      <%= date_select :appointment, :start_time, {:class => "form-control" } %>
    </div>
    <div class="col-lg-2">
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Pacific Time (US & Canada)" %>
    </div>
  </div>

  </br>
  </br>
  
  <div class="form-group">
    <%= f.label :end, "Time and Date", :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= time_select :appointment, :end_time, {:class => "form-control" } %>
    </div>
    <div class="col-lg-4">
      <%= date_select :appointment, :end_time, {:class => "form-control" } %>
    </div>
    <div class="col-lg-2">
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Pacific Time (US & Canada)" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customer_appointments_path, :class => 'btn btn-default' %>
    </div>
  </div>
 
<% end %>
