<!DOCTYPE html>
<html>
  <head>
    <title>Hair Salon Pro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Hair Salon Pro</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <% if admin_signed_in? %>
              <li><%= link_to 'Edit account', edit_admin_registration_path %></li>
              <li><%= link_to 'Sign out', destroy_admin_session_path, :method=>'delete' %></li>
            <% else %>
              <li><%= link_to 'Sign in', new_admin_session_path %></li>
              <li><%= link_to 'Sign up', new_admin_registration_path %></li>
            <% end %>
            <% if admin_signed_in? %>
              <li><%= link_to 'Admins', admins_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="starter-template">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
